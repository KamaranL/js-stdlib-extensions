{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./lib",
    "rootDir": "./src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "declaration": true,
    "declarationDir": "./@types",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "moduleResolution": "Node"
  },
  "exclude": ["node_modules", "@types", "__tests__"],
  "typedocOptions": {
    "entryPoints": ["./src/ext"],
    "entryPointStrategy": "expand",
    "plugin": ["typedoc-plugin-markdown"],
    "out": "./docs",
    "entryDocument": "README.md",
    "githubPages": false,
    "publicPath": "/docs/"
  }
}
